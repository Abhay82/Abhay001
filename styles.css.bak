@import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;1,200&display=swap");

*{
	margin: 0;
	padding: 0;
}

.sidebar {
	position: absolute;
	/* background-color: red; */
	/* width: 434px; */
	font-family: 'Poppins', sans-serif;
	height: 100vh;
	transition: transform 0.3s ease-in;
}

.sidebar nav {
	padding: 25px;
	background-color: rgb(223, 218, 218);
	width: 100px;
	height: 556px;
	/* text-align: left; */
}

.sidebar nav ul {
	padding-left: 0px;
}

.sidebar nav li {
	list-style: none;
	font-size: 20px;
	padding: 23px 0;
}

.sidebar nav li a {
	text-decoration: none;
	color: black;
}

.main {
	background-color: black;
	width: 90vw;
	height: 606px;
	color: white;
}

.container {
	display: flex;
	background-color: black;
}

.infoContainer {
	/* background-color: green; */
	height: 58vh;
	width: 80vw;
	margin: 144px auto;
	display: flex;
	justify-content: space-around;
}

.devInfo {
	display: flax;
	justify-content: center;
	flex-direction: column;
	margin-left: 50px;
}

.hello {
	font-size: 65px;
}

.name {
	font-size: 50px;
	font-weight: bold;
	color: red;
}

.about {
	font-size: 25px;
}

.moreabout {
	font-size: 22px;
	margin-top: 23px;
	margin-bottom: 15px;
}

.buttons {
	margin-top: 34px;
}

.devInfo button {
	padding: 9px 14px;
	border-radius: 22px;
	color: white;
	background-color: dodgerblue;
	font-weight: bold;
	font-size: 21px;
	margin: 0 3px;
	cursor: pointer;
}

.devInfo button:hover{
	background-color: white;
	color: dodgerblue;
}

.devPic img {
	height: 58vh;
}

.contactform {
	font-family: 'Poppins', sans-serif;
	padding: 0 34px;
	padding-top: 50px;
}

.contactform h1 {
	font-family: 'Poppins', sans-serif;
	padding: 12px 0;
}

.contactform form button {
	padding: 9px 14px;
	border-radius: 22px;
	color: white;
	background-color: dodgerblue;
	font-weight: bold;
	font-size: 15px;
	margin: 10px 3px;
	cursor: pointer;
}

.contactform form button:hover {
	color: dodgerblue;
	background-color: white;
}

.contactform form div {
	padding: 5px 0;
	display: flex;
	flex-direction: column;
}

.contactform form div input {
	width: 16vw;
	border-radius: 5px;
	margin: 6px 0 0 0;
	padding: 3px;
}


#emailHelp {
	font-size: 12px;
	color: midnightblue;
	margin: 0 5px;
	padding: 3px 0 0 0;
}

#form-check {
	flex-direction: row;
}

#form-check input {
	width: 20px;
	margin: 5px 0;
}

.blogitem {
	margin: 20px;
	font-family: 'Poppins', sans-serif;
	margin-left: 40px;
}

.blogContainer h1 {
	margin: 40px;
	margin-left: 40px;
}

.blogitem h2 {
	margin: 8px 40px;
	font-family: 'Poppins', sans-serif;
	margin-left: 40px;
}

.blogitem p {
	margin: -15px 60px;
	font-family: 'Poppins', sans-serif;
	margin-left: 40px;
}

.blogContainer div button {
	padding: 9px 14px;
	border-radius: 22px;
	color: white;
	background-color: dodgerblue;
	font-weight: bold;
	font-size: 12px;
	margin: 15px 40px;
	cursor: pointer;
	margin-left: 40px;
}

.blogContainer div button:hover {
	color: dodgerblue;
	background-color: white;
}

.intro h2 {
	margin: 12px;
	margin-left: 149px;
	margin-right: 49px;
	/* margin-top: 144px; */
}

.intro p {
	font-family: 'Poppins', sans-serif;
	margin: 12px;
	margin-left: 150px;
}

