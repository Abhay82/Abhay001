import pyttsx3
import speech_recognition as sr
engine = pyttsx3.init()
engine.say("Hello I am Mentor. I am an Virtual Assistance of Charusat University and I am created by Abhay, Raj, Vaisnavi and dev.")
engine.say("How I can help you?")

def takeCommand():
     
    r = sr.Recognizer()
     
    with sr.Microphone() as source:
         
        print("Listening...")
        r.pause_threshold = 1
        audio = r.listen(source)
        
        try:
        print("Recognizing...")   
        query = r.recognize_google(audio, language ='en-in')
        print(f"User said: {query}\n")
  
    except Exception as e:
        print(e)   
        print("Unable to Recognize your voice.") 
        return "None"
     
    return query.lower()
         
        query = takeCommand()
        if 'how are you' in query:
            speak("I am fine, Thank you")
            speak("How are you, Sir")
 
        else:
            speak("Not found")


engine.runAndWait()
